<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:title="@string/report_symptoms"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="@color/white"
            app:elevation="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/info_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_info"
                        android:contentDescription="@string/info_icon"
                        app:tint="@color/info" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="@string/symptom_report_info"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Patient Details Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/patient_details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <!-- Age Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/age"
                app:endIconDrawable="@drawable/ic_calendar"
                app:endIconTint="@color/primary"
                app:boxStrokeColor="@color/primary"
                app:hintTextColor="@color/primary"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:padding="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Gender Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/gender"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <RadioGroup
                android:id="@+id/rgGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbMale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/male"
                    android:textSize="14sp"
                    app:buttonTint="@color/primary" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbFemale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/female"
                    android:textSize="14sp"
                    app:buttonTint="@color/primary" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbOther"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/other"
                    android:textSize="14sp"
                    app:buttonTint="@color/primary" />

            </RadioGroup>

            <!-- Symptoms Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/select_symptoms"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/select_all_apply"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <!-- Symptoms Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <CheckBox
                        android:id="@+id/cbFever"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fever"
                        android:textSize="15sp"
                        android:buttonTint="@color/primary"
                        android:padding="8dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <CheckBox
                        android:id="@+id/cbCough"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cough"
                        android:textSize="15sp"
                        android:buttonTint="@color/primary"
                        android:padding="8dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <CheckBox
                        android:id="@+id/cbBreathingDifficulty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/breathing_difficulty"
                        android:textSize="15sp"
                        android:buttonTint="@color/primary"
                        android:padding="8dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <CheckBox
                        android:id="@+id/cbHeadache"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/headache"
                        android:textSize="15sp"
                        android:buttonTint="@color/primary"
                        android:padding="8dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <CheckBox
                        android:id="@+id/cbBodyAche"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/body_ache"
                        android:textSize="15sp"
                        android:buttonTint="@color/primary"
                        android:padding="8dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <CheckBox
                        android:id="@+id/cbFatigue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fatigue"
                        android:textSize="15sp"
                        android:buttonTint="@color/primary"
                        android:padding="8dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <CheckBox
                        android:id="@+id/cbSoreThroat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sore_throat"
                        android:textSize="15sp"
                        android:buttonTint="@color/primary"
                        android:padding="8dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <CheckBox
                        android:id="@+id/cbNausea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nausea"
                        android:textSize="15sp"
                        android:buttonTint="@color/primary"
                        android:padding="8dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <CheckBox
                        android:id="@+id/cbDiarrhea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/diarrhea"
                        android:textSize="15sp"
                        android:buttonTint="@color/primary"
                        android:padding="8dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <CheckBox
                        android:id="@+id/cbRash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rash"
                        android:textSize="15sp"
                        android:buttonTint="@color/primary"
                        android:padding="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Symptom Duration -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/symptom_duration"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <RadioGroup
                android:id="@+id/rgDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbToday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/today"
                    android:textSize="14sp"
                    app:buttonTint="@color/primary"
                    android:padding="8dp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb1to3Days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/one_to_three_days"
                    android:textSize="14sp"
                    app:buttonTint="@color/primary"
                    android:padding="8dp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb4to7Days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/four_to_seven_days"
                    android:textSize="14sp"
                    app:buttonTint="@color/primary"
                    android:padding="8dp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbMoreThan7Days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/more_than_seven_days"
                    android:textSize="14sp"
                    app:buttonTint="@color/primary"
                    android:padding="8dp" />

            </RadioGroup>

            <!-- Additional Notes -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="@string/additional_notes"
                app:boxStrokeColor="@color/primary"
                app:hintTextColor="@color/primary"
                app:helperText="@string/optional"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="4"
                    android:maxLines="6"
                    android:gravity="top"
                    android:textSize="16sp"
                    android:padding="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Location Checkbox -->
            <CheckBox
                android:id="@+id/cbShareLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/share_location"
                android:textSize="14sp"
                android:checked="true"
                android:buttonTint="@color/primary" />

            <!-- Submit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmitReport"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:text="@string/submit_report"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:cornerRadius="12dp"
                app:elevation="4dp"
                android:backgroundTint="@color/primary" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>